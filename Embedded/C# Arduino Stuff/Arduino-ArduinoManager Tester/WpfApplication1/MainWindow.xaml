<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="toSendBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="427" RenderTransformOrigin="-1.058,-1.522" KeyDown="toSendBox_KeyDown"/>
        <Button x:Name="sendButton" Content="SEND" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="442,10,0,0" Click="sendButton_Click"/>
        <TextBox x:Name="sentBox" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" Height="239" Margin="10,71,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="245"/>
        <TextBox x:Name="recBox" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" Height="239" Margin="262,71,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="245"/>
        <Label Content="SENT" HorizontalAlignment="Left" Margin="100,40,0,0" VerticalAlignment="Top"/>
        <Label Content="REC" HorizontalAlignment="Left" Margin="359,40,0,0" VerticalAlignment="Top"/>
        <Button x:Name="stressButton" Content="STRESS" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="442,37,0,0" Click="stressButton_Click"/>

    </Grid>
</Window>
